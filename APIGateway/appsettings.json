{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Jwt": {
    "Key": "SuperSecretKey@12",
    "SecretKey": "ThisIsAVeryStrongSecretKey123456",
    "Issuer": "https://localhost:5600",
    "Audience": "https://localhost:5600",
    "Authority": "https://localhost:5600"
  },
  "AllowedHosts": "*",
  "IdentityServiceUrl": "http://localhost:5500",
  "ReverseProxy": {
    "Routes": {
      "identity-route": {
        "ClusterId": "identity-cluster",
        "Match": {
          "Path": "/identity-api/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/identity-api"
          }
        ]
      }
    },
    "Clusters": {
      "identity-cluster": {
        "Destinations": {
          "identity-api": {
            "Address": "http://identity.api:8080"
          }
        }
      }
    }
  }
}
